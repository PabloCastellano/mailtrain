<mj-section>
    <mj-column>
        <mj-text mj-class="h3">
            Please Confirm Subscription Address Change
        </mj-text>
        <mj-button mj-class="button" href="{{confirmUrl}}">
            Yes, subscribe this email address to the list
        </mj-button>
        <mj-text mj-class="p">
            If you received this email by mistake, simply delete it. You won't be subscribed if you don't click the confirmation link above.
        </mj-text>
        <mj-text mj-class="p">
            {{#translate}}forQuestionsAboutThisListPleaseContact{{/translate}}
            <br/><a href="mailto:{{contactAddress}}">{{contactAddress}}</a>
        </mj-text>
    </mj-column>
</mj-section>
